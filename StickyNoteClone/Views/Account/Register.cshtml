@model StickyNoteClone.Models.DTO.UserRegistrationModel
<div class="m-2">

    <h5 class="bg-primary text-white text-center p-2">Create User</h5>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Register">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-floating mb-3 mt-3">
                    <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
                    <label asp-for="FirstName">First Name</label>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 mt-3">
                    <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
                    <label asp-for="LastName">Last Name</label>

                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 mt-3">

                    <input asp-for="Email" class="form-control" placeholder="Enter email" />
                    <label asp-for="Email"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 mt-3">
                    <input asp-for="Password" class="form-control" placeholder="Enter password" />
                    <label asp-for="Password"></label>

                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 mt-3">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Enter confirm password" />
                    <label asp-for="ConfirmPassword">Confirm Password</label>

                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}